<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_user_id"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_user_name"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_local_name"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_nickname"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_join_time"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_role"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btn_kick" android:text="移出群组"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btn_transfer" android:text="移交管理员"/>

</LinearLayout>