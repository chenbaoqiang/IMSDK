<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_from"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_to"/>

    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_imdn_id"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_content"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_time"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_progress"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_status"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_content_type"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv_transfer"/>






    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btn_download" android:text="下载文件"/>
</LinearLayout>