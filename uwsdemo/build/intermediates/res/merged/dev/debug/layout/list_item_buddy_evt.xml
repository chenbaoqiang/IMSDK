<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="发起者UserID"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:id="@+id/tv_from_id"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="发起者名称"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:id="@+id/tv_from_name"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="接收者UserID "/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:id="@+id/tv_to_id"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="事件类型"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:id="@+id/tv_event"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="时间"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:id="@+id/tv_time"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="请求添加原因"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:id="@+id/tv_reason"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="拒绝原因"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:id="@+id/tv_refuse_reason"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="同意" android:id="@+id/btn_accept"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="拒绝" android:id="@+id/btn_refuse"/>
</LinearLayout>